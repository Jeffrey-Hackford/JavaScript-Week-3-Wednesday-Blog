{{#if updatePostForm}}
<!-- will show the following if updatePostForm is true: -->
<div class="container">
  <h1>Update A Post</h1>

  <form>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{textarea value=body id="body"}}
    </div>

    <button {{action 'update' post}}>Update</button>
  </form>
</div>

{{else}}
<!-- if updatePostForm is false, only this will show: -->
  <button {{action 'updatePostForm'}}>Update a Post</button>
{{/if}}
